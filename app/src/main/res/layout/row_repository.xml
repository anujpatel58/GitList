<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#efefef"
                android:gravity="center_vertical"
                android:padding="10dp">

    <ImageView
        android:id="@+id/repo_iv"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentLeft="true"
        android:background="@null"
        android:contentDescription="@string/app_name"
        android:padding="5dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_class_black_24dp"/>

    <RelativeLayout
        android:id="@+id/repo_description_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/repo_iv"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/repo_title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/repo_description_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/repo_title_tv"
            android:paddingTop="2dp"
            android:textColor="#757575"
            android:textSize="13sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/repo_description_tv"
            android:layout_marginTop="5dp"
            android:gravity="start"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/code_iv"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginRight="3dp"
                android:background="@null"
                android:contentDescription="@string/app_name"
                android:padding="1dp"
                android:src="@drawable/ic_code_black_24dp"/>

            <TextView
                android:id="@+id/repo_code_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:paddingTop="2dp"
                android:text="Java"
                android:textColor="#757575"
                android:textSize="15sp"/>

            <ImageView
                android:id="@+id/bug_iv"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginRight="3dp"
                android:background="@null"
                android:contentDescription="@string/app_name"
                android:padding="1dp"
                android:src="@drawable/ic_bug_report_black_24dp"/>

            <TextView
                android:id="@+id/repo_bug_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:paddingTop="2dp"
                android:text="21"
                android:textColor="#757575"
                android:textSize="15sp"/>

            <ImageView
                android:id="@+id/view_iv"
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:layout_marginRight="3dp"
                android:background="@null"
                android:contentDescription="@string/app_name"
                android:padding="1dp"
                android:src="@drawable/ic_face_black_24dp"/>

            <TextView
                android:id="@+id/repo_view_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="2dp"
                android:text="2754"
                android:textColor="#757575"
                android:textSize="15sp"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>